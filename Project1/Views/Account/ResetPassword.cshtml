@model BookWebApp.Infrastructure.AccountInfraStructure.ResetPasswordModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="hidden-sm-down" id="login_section" content="width=device-width" style="height:100%;">
    <div class="container align-items-center justify-content-center d-flex w-50" style="height:100%;">
        <div class="card w-75">
            <div class="card-header text-center" style="background-color:black;color:goldenrod;">
                <h3 class="display-4">
                    Sign In
                </h3>
                <p class="text-white">Reset Password</p>
            </div>
            <div class="card-block">
                <form method="post" asp-action="ResetPassword" asp-controller="account">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Code" type="hidden" />
                    <div class="form-group mt-2">
                        <label for="name">Email</label>
                        <input class="form-control" name="email" asp-for="Email" id="name" placeholder="Name ... " type="text" asp-route-name="">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label for="password">Password</label>
                        <input class="form-control" name="password" asp-for="Password" id="password" placeholder="New Password ... " type="password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-2">
                        <label for="password">Password</label>
                        <input class="form-control" name="password" asp-for="ConfirmPassword" id="password" placeholder="Confirm Password ... " type="password">
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button href="#" class="btn btn-outline-warning d-block mt-3 w-100" type="submit">Reset</button>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="w-100 d-md-none">
    <div class="card w-100">
        <div class="card-header text-center" style="background-color:white;">
            <h3 class="display-4">Sign In</h3>
            <p class="lead text-muted mb-0 pt-1">Reset Password</p>
        </div>
        <div class="card-block text-white" style="background-color:black;">
            <form method="post" asp-action="ResetPassword" asp-controller="account">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control" name="email" id="email" asp-for="Email" placeholder="Email ... " type="text" asp-route-name="">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label for="password">Password</label>
                    <input class="form-control" asp-for="Password" name="password" id="password" placeholder="New Password ... " type="password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-2">
                    <label for="CONpassword">Confirm Password</label>
                    <input class="form-control" asp-for="ConfirmPassword" name="CONpassword" id="CONpassword" placeholder="Confirm Password ... " type="password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button href="#" class="btn btn-outline-success d-block mt-3 w-100" type="submit">Reset</button>
            </form>
        </div>
    </div>
</section>

