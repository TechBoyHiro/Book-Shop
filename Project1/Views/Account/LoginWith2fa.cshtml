@model  BookWebApp.Infrastructure.AccountInfraStructure.Login2FAModel
@{
    ViewData["Title"] = "LoginWith2fa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="w-100 h-100 bg-inverse">
    <div class="container">
        <div class="row w-100 h-100">
            <div class="col w-100 h-100">
                <h3 class="text-white text-center mt-5 mt-auto">Enter Two Factor Code Send To</h3>
                <br />
                <p class="text-success text-center mt-2">@Model.Email</p>
            </div>
            <hr class="text-white w-50 mx-3"/>
            <div class="text-danger mx-2" asp-validation-summary="All"></div>
            <form method="post" asp-action="LoginWith2fa" asp-controller="Account">
                <div class="form-group">
                    <label for="twofactorcode">Code: </label>
                    <input asp-for="TwoFactorCode" class="form-control text-center" placeholder="Code" id="twofactorcode" />
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Rememberme">
                            <input asp-for="Rememberme" />
                            <span class="text-white">@Html.DisplayNameFor(m => m.Rememberme)</span>
                        </label>
                    </div>
                </div>
                <button class="btn btn-outline-primary d-block text-center mt-3" type="submit">Login</button>
            </form>
        </div>
    </div>
</section>

